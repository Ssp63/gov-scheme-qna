# ===========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ===========================================
# Copy these to .env files for local development

# Server (.env in server folder)
NODE_ENV=development
PORT=5000
MONGODB_URI=mongodb://localhost:27017/govt-scheme-qna
JWT_SECRET=your-super-secret-jwt-key-for-development
GOOGLE_API_KEY=your-google-ai-api-key-here
CORS_ORIGIN=http://localhost:3000

# Cloudinary Configuration (required for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Client (.env.local in client folder)
REACT_APP_API_URL=http://localhost:5000/api

# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# These will be set in Vercel and Render dashboards

# Server (Render)
NODE_ENV=production
PORT=10000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/govt-scheme-qna?retryWrites=true&w=majority
JWT_SECRET=your-super-secret-jwt-key-for-production
GOOGLE_API_KEY=your-google-ai-api-key-here
CORS_ORIGIN=https://your-frontend-url.vercel.app

# Cloudinary Configuration (required for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Client (Vercel)
REACT_APP_API_URL=https://your-backend-url.onrender.com/api

