# Server Environment Variables
# Copy this file to .env and replace the placeholder values with your actual credentials

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/govt-scheme-qna?retryWrites=true&w=majority

# JWT Secret (use a strong, unique secret for production)
JWT_SECRET=your-super-secret-jwt-key-here

# Google API Configuration
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Azure Translator Configuration
AZURE_TRANSLATOR_KEY=your-azure-translator-key-here
AZURE_TRANSLATOR_REGION=eastus

# Cloudinary Configuration (for file storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Azure OpenAI Configuration (for embeddings)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2023-05-15 